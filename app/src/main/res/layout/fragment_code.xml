<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@color/colorBlack"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/temp_up_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="U" />

            <Button
                android:id="@+id/temp_down_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="D" />

            <Button
                android:id="@+id/temp_left_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="L" />

            <Button
                android:id="@+id/temp_right_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="R" />

            <ImageButton
                android:id="@+id/remove_line_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_remove_line_24dp" />

            <ImageButton
                android:id="@+id/run_program_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_run_program_24dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorCode" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/code_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/command_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>